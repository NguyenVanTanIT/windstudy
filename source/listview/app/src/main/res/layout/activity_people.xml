<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nguyentan.listview.people.PeopleActivity"
    android:orientation="vertical"
    android:background="@mipmap/backround_nature"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Name"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/etxt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Year Old"
            android:gravity="center_vertical"
            android:textSize="30sp"
            />
        <EditText
            android:id="@+id/etxt_year_old"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Address"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/etxt_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/btn_people_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/btn_clear_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear"/>
        <Button
            android:id="@+id/btn_update_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>

    </LinearLayout>


    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/lv_people"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
